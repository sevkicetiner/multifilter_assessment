<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    tools:context=".ui.fragments.filter.FilterFragment">

    <LinearLayout
        android:layout_width="400dp"
        android:layout_margin="50dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/km_min"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:hint="Min km" />

            <EditText
                android:id="@+id/km_max"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginLeft="30dp"
                android:hint="Max km" />

            <ImageButton
                android:id="@+id/km_refresh"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@color/black_transparent_light"
                android:src="@drawable/ic_baseline_refresh_24" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/year_min"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:hint="Min km" />

            <EditText
                android:id="@+id/year_max"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginLeft="30dp"
                android:hint="Max km" />

            <ImageButton
                android:id="@+id/year_refresh"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@color/black_transparent_light"
                android:src="@drawable/ic_baseline_refresh_24" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/price_min"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:hint="Min km" />

            <EditText
                android:id="@+id/price_max"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginLeft="30dp"
                android:hint="Max km" />

            <ImageButton
                android:id="@+id/price_refresh"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@color/black_transparent_light"
                android:src="@drawable/ic_baseline_refresh_24" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>